<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>z.z.w</groupId>
	<artifactId>pro-module</artifactId>
	<version>2015083110-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>pro-module</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.main.runner>z.z.w.test.MainRunner</project.main.runner>
		<project.jvm.arguments>-server -Xms4096M -Xmx4096M
			-XX:-UseGCOverheadLimit -verbose:gc -XX:+PrintGCDetails
			-XX:+HeapDumpOnOutOfMemoryError</project.jvm.arguments>
	</properties>

	<profiles>
		<!-- mvn clean package -Pmaster -->
		<profile>
			<id>dev</id>
			<properties>
				<logback.target>target</logback.target>
				<logback.console><![CDATA[<appender-ref ref="console" />]]></logback.console>
			</properties>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
			</build>
			<!-- 默认�?��环境 -->
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>

		<profile>
			<id>master</id>
			<properties>
				<logback.target>..</logback.target>
				<logback.console> </logback.console>
			</properties>

			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<targetPath>${project.build.directory}/${project.build.finalName}/conf</targetPath>
						<excludes>
							<exclude>META-INF/**/*.*</exclude>
						</excludes>
						<filtering>true</filtering>
					</resource>

					<resource>
						<directory>src/main/resources</directory>
						<includes>
							<include>META-INF/**/*.*</include>
						</includes>
					</resource>
				</resources>

				<plugins>
					<!-- 自動打包生成shell腳本和bat腳本 -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>appassembler-maven-plugin</artifactId>
					</plugin>

					<!-- assembly插件，分結構打包 -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>dev-web</id>
			<properties>
				<logback.target>../..</logback.target>
				<logback.console> </logback.console>
			</properties>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
			</build>
		</profile>

	</profiles>

	<dependencyManagement>
		<dependencies>

			<!-- 工具�? -->
			<dependency>
				<groupId>z.z.w</groupId>
				<artifactId>pro-common</artifactId>
				<version>2015083110-SNAPSHOT</version>
			</dependency>

			<!-- DB -->
			<dependency>
				<groupId>z.z.w</groupId>
				<artifactId>dependency-db</artifactId>
				<version>201508319-SNAPSHOT</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>

			<!-- spring -->
			<dependency>
				<groupId>z.z.w</groupId>
				<artifactId>dependency-spring</artifactId>
				<version>201508319-SNAPSHOT</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>

			<!-- common -->
			<dependency>
				<groupId>z.z.w</groupId>
				<artifactId>dependency-common</artifactId>
				<version>201508319-SNAPSHOT</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>

		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-source-plugin</artifactId>
					<version>2.3</version>
					<!-- 是否让子pom继承true or false -->
					<inherited>true</inherited>
					<!-- plugin也有很多个目标，每个目标具有不同的配置，executions就是设定plugin的目�? -->
					<executions>
						<execution>
							<phase>package</phase>
							<goals>
								<goal>jar-no-fork</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>2.8</version>
					<configuration>
						<skipTests>true</skipTests>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>appassembler-maven-plugin</artifactId>
					<version>1.3</version>
					<configuration>
						<configurationDirectory>conf</configurationDirectory>
						<assembleDirectory>${project.build.directory}/${project.build.finalName}</assembleDirectory>
						<repositoryLayout>flat</repositoryLayout>
						<repositoryName>lib</repositoryName>
						<includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
						<useAsterikClassPath>true</useAsterikClassPath>
						<showConsoleWindow>false</showConsoleWindow>
						<extraJvmArguments>${project.jvm.arguments}</extraJvmArguments>
						<binFileExtensions>
							<unix>.sh</unix>
						</binFileExtensions>
						<platforms>
							<!-- <platform>windows</platform> -->
							<platform>unix</platform>
						</platforms>
						<programs>
							<program>
								<mainClass>${project.main.runner}</mainClass>
								<name>rProject</name>
							</program>
						</programs>
					</configuration>
					<executions>
						<execution>
							<phase>package</phase>
							<goals>
								<goal>assemble</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.2.1</version>
					<configuration>
						<filters>
							<filter>src/main/assembly/filter.properties</filter>
						</filters>
						<descriptors>
							<descriptor>src/main/assembly/assembly.xml</descriptor>
						</descriptors>
						<encoding>UTF-8</encoding>
					</configuration>
					<executions>
						<execution>
							<phase>package</phase>
							<goals>
								<goal>single</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

				<!-- jetty:run -->
				<plugin>
					<groupId>org.mortbay.jetty</groupId>
					<artifactId>maven-jetty-plugin</artifactId>
					<version>6.1.10</version>
					<configuration>
						<scanIntervalSeconds>10</scanIntervalSeconds>
						<connectors>
							<connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
								<port>8888</port>
								<maxIdleTime>60000</maxIdleTime>
							</connector>
						</connectors>
						<webAppConfig>
							<contextPath>/</contextPath>
						</webAppConfig>
					</configuration>
					<executions>
						<execution>
							<id>start-jetty</id>
							<phase>pre-integration-test</phase>
							<goals>
								<goal>run</goal>
							</goals>
							<configuration>
								<scanIntervalSeconds>0</scanIntervalSeconds>
								<daemon>true</daemon>
							</configuration>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

