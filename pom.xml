	<profiles>
		<!-- mvn clean package -Pmaster -->
		<profile>
			<id>dev</id>
			<properties>
				<logback.target>target</logback.target>
				<logback.printsql>debug</logback.printsql>
				<logback.console><![CDATA[<appender-ref ref="console" />]]></logback.console>
			</properties>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
			</build>
			<!-- 默认�?��环境 -->
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>

		<profile>
			<id>master</id>
			<properties>
				<logback.target>/home/wuzz/${project.build.finalName}</logback.target>
				<logback.printsql>info</logback.printsql>
				<logback.console></logback.console>
			</properties>

			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<targetPath>${project.build.directory}/${project.build.finalName}/conf</targetPath>
						<excludes>
							<exclude>META-INF/**/*.*</exclude>
						</excludes>
						<filtering>true</filtering>
					</resource>

					<resource>
						<directory>src/main/resources</directory>
						<includes>
							<include>META-INF/**/*.*</include>
						</includes>
					</resource>
				</resources>

				<plugins>
					<!-- 自動打包生成shell腳本和bat腳本 -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>appassembler-maven-plugin</artifactId>
					</plugin>

					<!-- assembly插件，分結構打包 -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>dev-web</id>
			<properties>
				<logback.target>../..</logback.target>
				<logback.printsql>info</logback.printsql>
				<logback.console></logback.console>
			</properties>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
			</build>
		</profile>

	</profiles>

